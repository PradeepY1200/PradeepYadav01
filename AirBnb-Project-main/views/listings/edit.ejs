<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
<div class="col-8 offset-2">

    <h2>Edit Your Listings</h2>
<form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">   

    <br> 
     <br> 
    
    <div class="mb-3"> 
    <label for="title" class="form-label">Titles</label>
    <input name="listing[title]" 
    value="<%= listing.title %>" 
    type="text" 
    class="form-control"
    required 
    >    
    <div class="valid-feedback">looks good titles </div>
    <div class="invalid-feedback">should should required </div>
    </div>
    
     <br> 
     <br>
      
    <div class="mb-3"> 
    <label for="description" class="form-label">description </label>
    <textarea name="listing[description]" class="form-control"  required><%= listing.description %>" </textarea> 
    <div class="valid-feedback">description looks good </div>
    <div class="invalid-feedback">description should required </div>  
    </div>

     
     <br> 
     <br>  

     <div class="mb-3">  
        Original Listing Image <br>
        <img src="<%= originalImageUrl %>" >  
     </div>
    
     <br> 
     <br>  

    <div class="mb-3"> 
    <label for="image" class="form-label">New Image Upload</label>
    <input 
    name="listing[image]" 
    type="file" 
    class="form-control"
    >  
    
    </div>

     
     <br>
     <br>
    <div class="row">
    <div class="mb-3 col-md-4"> 
    <label for="price" class="form-label">Prices</label>
    <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"
    required 
    >  
    <div class="valid-feedback">prices  looks good </div>
    <div class="invalid-feedback">prices should required </div>
    </div>


     
     <br>
     <br>

    <div class="mb-3 col-md-8"> 
    <label for="country" class="form-label">Country</label>
    <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" 
    required
    > 
    <div class="valid-feedback">country looks good </div>
    <div class="invalid-feedback">country should required </div> 
    </div>
    </div>
     <br>
     <br>  

    <div class="mb-3"> 
    <label for="location" class="form-label">Location</label>
    <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control"
    required
    >
    <div class="valid-feedback">location looks good </div>
    <div class="invalid-feedback">location should required </div>    
    </div>


     <button class="btn btn-dark edit-btn mb-3" >edit</button>
     

</form> 
</div>
</div> 
