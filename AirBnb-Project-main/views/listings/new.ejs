<% layout("/layouts/boilerplate") %>
   <div class="row mt-3"> 
      <div class="col-8 offset-2">
         <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
               <label for="title" class="form-label">Title</label>
               <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
               <div class="valid-feedback">looks good titles </div>
               <div class="invalid-feedback">should should required </div>
            </div>
            <br>
            <br>
            <div class="mb-3">
               <label for="description" class="form-label">description</label>
               <textarea name="listing[description]" placeholder="Description" class="form-control" required></textarea>
               <div class="invalid-feedback">description should required </div>
            </div>
            <br>
            <br>
   
            <br>
            <br>
            <div class="mb-3">
               <label for="image" class="form-label">Upload A Image</label>
               <input name="listing[image]" 
               type="file" 
               class="form-control">
               <div class="invalid-feedback">image should required </div>
            </div>
            <br>
            <div class="row">
               <div class="mb-3 col-md-4">
                  <label for="price" class="form-label">prices</label>
                  <input name="listing[price]" placeholder="enter prices" type="number" class="form-control" required>
                  <div class="invalid-feedback">prices should required </div>
               </div>
               <br>
               <br>
               <div class="mb-3 col-md-8">
                  <label for="country" class="form-label">country</label>
                  <input name="listing[country]" placeholder="India " type="text" class="form-control" required>
                  <div class="invalid-feedback">country should required </div>
                  <div class="valid-feedback">Preferiable for india </div>
               </div>
            </div>
            <br>
            <br>
            <div class="mb-3">
               <label for="location" class="form-label">location</label>
               <input name="listing[location]" placeholder="Utter Pradesh Mumbai" type="text" class="form-control"
                  required>
               <div class="invalid-feedback">locations should required </div>
            </div>

            <button class="btn btn-dark add-btn mb-3">ADD</button>
         </form>
      </div>
   </div>